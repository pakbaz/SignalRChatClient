<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignalRChatClient.Mobile.MainPage">

    <StackLayout Spacing="20">
        <Label Text="Messages:" FontSize="Large" />
        <ListView x:Name="lstView" VerticalOptions="CenterAndExpand" />
        <Entry x:Name="txtEntry" HeightRequest="40" />
        <Button Text="Send Message" HeightRequest="50" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
